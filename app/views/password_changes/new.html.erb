<% provide :title, t(".change_password") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t ".change_password" %></h1>
    <%= form_for :password, url: password_path do |f| %>
      <div class="form-group">
        <%= f.label :old_password %>
        <%= f.password_field :old_password, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :new_password %>
        <%= f.password_field :new_password, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :confirm_password %>
        <%= f.password_field :confirm_password, class: "form-control", required: true %>
      </div>

      <%= f.submit t(".save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
