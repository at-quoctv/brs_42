<% provide :title, t(".edit_profile") %>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <h1><%= t (".edit_profile") %></h1>
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class = "form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", disabled: true %>
      </div>

      <div class = "form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= gravatar_for @user %>
        <%= link_to t(".change_avatar"), Settings.users.avatar,
          target: "_blank" %>
      </div>

      <%= f.submit t(".save_profile"), class: "btn btn-primary" %>
      <%= link_to t(".change_password"), password_path %>
    <% end %>
  </div>
</div>
