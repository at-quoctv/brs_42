<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to image_tag("books/logo.png", id: "logo-icon") + t("header.logo"),
      root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" id="menu-top">
        <li><%= link_to t("header.home"), root_path %></li>
        <% if is_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span>
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), "#" %></li>
              <li><%= link_to t("header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.signup"), signup_path %></li>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
